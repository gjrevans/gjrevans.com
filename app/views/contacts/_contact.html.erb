<h5 class="section--title">Contact</h5>
<p>Let's get in touch, network, or whatever else it is you do via a contact form.</p>
<%= form_for @contact do |f| %>
<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "John Doughboy", required: true %>
</div>
    <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", placeholder: "doughboy@booblybob.com", required: true %>
    </div>
    <div class="form-group">
        <%= f.label :message %>
        <%= f.text_area :message, class: "form-control", placeholder: "Let's build something cool together!", required: true %>
    </div>
    <div class="form-group hidden">
        <%= f.label :nickname %>
        <%= f.text_area :nickname, hint: "leave this field blank" %>
    </div>
    <%= f.button "Send Message", class: "btn btn-primary btn-full-width", data: {disable_with: "<i class='fa fa-spinner fa-pulse'></i> Submitting Message"} %>
<% end %>
