<section id="contact" class="section--white">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h5 class="section--title">Contact</h5>
                <%= form_for @contact do |f| %>
                <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: "form-control", placeholder: "First and Last Name", required: true %>
                    <small id="emailHelp" class="form-text text-muted">I swearzies that I'll never share your email with anyone else.</small>
                </div>
                    <div class="form-group">
                        <%= f.label :email %>
                        <%= f.text_field :email, class: "form-control", placeholder: "jerry@smith.com", required: true %>
                        <small id="emailHelp" class="form-text text-muted">I swearzies I'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <%= f.label :message %>
                        <%= f.text_area :message, class: "form-control", placeholder: "Let's build something cool together!", required: true %>
                    </div>
                    <div class="form-group hidden-lg-down">
                        <%= f.label :nickname %>
                        <%= f.text_area :nickname, hint: "leave this field blank" %>
                    </div>

                    <%= f.submit "Send Message", class: "btn btn-primary btn-full-width", data: {disable_with: "<i class='fa fa-spinner fa-pulse'></i> Signing In"} %>
                <% end %>
            </div>
        </div>
    </div>
</section>
