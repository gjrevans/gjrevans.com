<section id="welcome">
    <!-- IMAGE BACKGROUND -->
    <div id="welcomeImage"></div>

    <!-- HEADER BEGIN -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="title">Gordon Evans</h2>
                <div class="subtitle">
                    <p>I design and code things into existence...</p>
                    <a href="#work" class="btn btn-primary">My Work</a>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="about" class="section--white text-xs-center">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h5 class="section--title">About me</h5>
                <p>Hey there and welcome to my site. I've been wanting to put something up on the interwebs for a while now and have finally gotten a free weekend to play around.</p>
                <p>For those of you just joining us, my name is Gordon Evans. I was born in a small town in South Western Ontario called Pefferlaw and you guessed it grew up a hick.</p>
            </div>
        </div>
    </div>
</section>
<section id="work" class="section--grey text-xs-center">
    <div class="container">
        <div class="row text-xs-center">
            <div class="col-md-12">
                <h5 class="section--title">
                    Stuff I've Worked On
                </h5>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <%= image_tag "project_01.jpg", class:"card-img-top", alt:"codego" %>
                    <div class="card-block">
                        <h4 class="card-title">Wirkn</h4>
                        <p class="small">2015 - present</p>
                        <p class="card-text">Wirkn is a social network for job seekers.</p>
                        <%= link_to "Learn More", "https://wirkn.com", target: "_blank", class: "btn btn-block btn-primary" %>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <%= image_tag "project_01.jpg", class:"card-img-top", alt:"codego" %>
