<div id="pageContent" class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="float-xs-left">Sites</h1>
            <div class="float-xs-right">
                <%= link_to 'New Site', new_site_path, class: "btn btn-primary" %>
            </div>
            <table class="table table-hover">
                <thead class="thead-inverse">
                    <tr>
                        <th>Title</th>
                        <th>Image</th>
                        <th>Github</th>
                        <th>Link</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% @sites.each do |site| %>
                    <tr>
                        <td><%= site.title %></td>
                        <td><%= link_to 'Image', site.image %></td>
                        <td><%= link_to 'Code', site.github %></td>
                        <td><%= link_to 'Site', site.link %></td>
                        <td>
                            <%= link_to site, title: "show" do %><span class="fa fa-eye mr-1"></span><% end %>
                            <%= link_to edit_site_path(site), title: "edit" do %><span class="fa fa-edit mr-1"></span><% end %>
                            <%= link_to site, method: :delete, data: { confirm: 'Are you sure?' }, title: "delete" do %><span class="fa fa-times"></span><% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
